# backupninja main configuration file. Generated by chef.

loglevel = <% @loglevel %>

reportemail = <%= @reportemail %>
reportsuccess = <%= @reportsuccess %>
reportwarning = <%= @reportwarning %>
reportspace = <%= @reportspace %>

#reporthost = 
#reportuser = ninja

reportdirectory = /var/lib/backupninja/reports
admingroup = root

#######################################################
# for most installations, the defaults below are good #
#######################################################

logfile = /var/log/backupninja.log
configdirectory = /etc/backup.d
scriptdirectory = /usr/share/backupninja
libdirectory = /usr/lib/backupninja
usecolors = yes
when = <%= @schedule %>
vservers = no